generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DB_URL")
}

type Otp {
  value     String
  expiresAt DateTime
}

model User {
  id         String  @id @default(auto()) @map("_id") @db.ObjectId
  email      String  @unique
  firstName  String
  lastName   String
  mobile     String
  password   String
  image      String?
  isVerified Boolean @default(false)
  otp        Otp?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("users")
}
